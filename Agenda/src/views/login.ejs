<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta preencha o formulario abaixo</p>
            <form action="/login/register" method="post"> <!--estamos criando uma rota para receber os dados desse formulario, vai ser a rota seguinte-->
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                    <label>Seu Email</label>
                    <input type="email" class="form-control" name="email"> <!--Vai ser mandando pro req.body quando for recebido-->
                </div>
                <div class="form-group">
                    <label>Sua Senha</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar Minha Conta</button>
            </form>

        </div>

        <div class="col-lg">
            <h4>Faça seu login</h4>

            <p>Se você ja tem uma conta faça login abaixo</p>
            <form action="/login/login" method="post"> <!--estamos criando uma rota para receber os dados desse formulario, vai ser a rota seguinte-->
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                    <label>Seu Email</label>
                    <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Sua Senha</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>


        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/head') %>


